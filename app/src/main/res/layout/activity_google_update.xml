<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GoogleUpdateActivity">

    <Spinner
        android:id="@+id/spinner_update_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>

    <Button
        android:id="@+id/btn_update_in_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8EFFAD"
        android:text="Save to google"
        android:layout_below="@+id/spinner_update_status"
        android:textColor="@color/black"/>

</RelativeLayout>